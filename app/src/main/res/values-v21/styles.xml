<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#f50057</item>
        <item name="colorPrimaryDark">#ff80ab</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="light_name">
      <item name="android:layout_width">wrap_content</item>
      <item name="android:layout_height">wrap_content</item>
      <item name="android:layout_alignParentBottom">true</item>
      <item name="android:layout_marginLeft">15dp</item>
      <item name="android:paddingBottom">2dp</item>
      <item name="android:textColor">#c51162</item>
      <item name="android:textSize">26dp</item>
    </style>

    <style name="light_subtitle">
      <item name="android:layout_width">fill_parent</item>
      <item name="android:layout_height">wrap_content</item>
      <item name="android:layout_gravity">center</item>
      <item name="android:layout_marginBottom">0dp</item>
      <item name="android:layout_marginLeft">10dp</item>
      <item name="android:paddingBottom">5dp</item>
      <item name="android:textColor">#00b0ff</item>
      <item name="android:textSize">18dp</item>
    </style>

    <style name="MyLocksCardViewPendingEkeys">
      <item name="android:layout_width">fill_parent</item>
      <item name="android:layout_height">wrap_content</item>
      <item name="android:layout_gravity">center</item>
      <item name="android:layout_marginBottom">10dp</item>
      <item name="android:layout_marginLeft">10dp</item>
      <item name="android:layout_marginTop">0dp</item>
      <item name="android:textColor">#9e9e9e</item>
    </style>

    <style name="MyLocksCardViewEkeyButton">
      <item name="android:layout_width">wrap_content</item>
      <item name="android:layout_height">30dp</item>
      <item name="android:layout_marginLeft">15dp</item>
      <!--item name="android:background">@drawable/rippledrawablesecondary</item-->
      <item name="android:textColor">#0c0c0c</item>
      <!--item name="android:elevation">2dp</item-->
      <item name="android:padding">0dp</item>
      <item name="android:textSize">13dp</item>
    </style>

    <style name="MyLocksCardViewUpdateButton">
      <item name="android:layout_width">wrap_content</item>
      <item name="android:layout_height">30dp</item>
      <item name="android:layout_marginBottom">10dp</item>
      <item name="android:layout_marginLeft">10dp</item>
      <item name="android:layout_marginRight">10dp</item>
      <!--item name="android:background">@drawable/rippledrawable</item-->
      <item name="android:textColor">#ffffff</item>
      <!--item name="android:elevation">2dp</item-->
      <item name="android:padding">0dp</item>
      <item name="android:textSize">13dp</item>
    </style>


</resources>

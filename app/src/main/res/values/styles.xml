<resources>

    <!-- Application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#f50057</item>
        <item name="colorPrimaryDark">#ff80ab</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="light_name">
      <item name="android:layout_width">wrap_content</item>
      <item name="android:layout_height">wrap_content</item>
      <item name="android:layout_alignParentBottom">true</item>
      <item name="android:layout_marginLeft">15dp</item>
      <item name="android:paddingBottom">2dp</item>
      <item name="android:layout_marginBottom">5dp</item>
      <item name="android:textColor">#c51162</item>
      <item name="android:textSize">26dp</item>
    </style>

    <style name="light_subtitle">
      <item name="android:layout_width">wrap_content</item>
      <item name="android:layout_height">wrap_content</item>
      <item name="android:layout_gravity">left</item>
      <item name="android:layout_marginBottom">0dp</item>
      <item name="android:layout_marginLeft">15dp</item>
      <item name="android:paddingBottom">5dp</item>
      <item name="android:textColor">#ff4081</item>
      <item name="android:textSize">18dp</item>
    </style>

</resources>

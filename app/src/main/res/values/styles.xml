<resources>

    <!-- Application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="colorAccent">@color/theme_accent_1</item>
        <item name="android:alertDialogTheme">@style/Theme.AlertDialog</item>
    </style>

    <style name="ActionBarThemeOverlay" parent="">
        <item name="android:textColorPrimary">#fff</item>
        <item name="colorControlHighlight">#3fff</item>
    </style>

    <style name="ActionBarPopupThemeOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="colorAccent">@color/theme_accent_1</item>
    </style>

    <style name="ActionBar.TitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="light_name">
      <item name="android:layout_width">wrap_content</item>
      <item name="android:layout_height">wrap_content</item>
      <item name="android:layout_alignParentBottom">true</item>
      <item name="android:layout_marginLeft">15dp</item>
      <item name="android:paddingBottom">2dp</item>
      <item name="android:layout_marginBottom">5dp</item>
      <item name="android:textColor">@color/body_text_1</item>
      <item name="android:textSize">26dp</item>
    </style>

    <style name="light_subtitle">
      <item name="android:layout_width">wrap_content</item>
      <item name="android:layout_height">wrap_content</item>
      <item name="android:layout_gravity">left</item>
      <item name="android:layout_marginBottom">0dp</item>
      <item name="android:layout_marginLeft">15dp</item>
      <item name="android:paddingBottom">5dp</item>
      <item name="android:textColor">@color/body_text_3</item>
      <item name="android:textSize">18dp</item>
    </style>

</resources>

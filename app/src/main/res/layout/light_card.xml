<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/keyline_1_minus_8dp">

<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true"
    >


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/keyline_1_minus_8dp"
                android:layout_marginTop="@dimen/keyline_1">
            <TextView
                style="@style/light_name"
                android:textSize="@dimen/title"
                android:id="@+id/light_name"
                android:text="@string/light_name"
                android:layout_marginLeft="@dimen/keyline_1"/>

            <Switch
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/switch1"
                android:checked="false"
                android:layout_marginRight="@dimen/keyline_1"/>

            </LinearLayout>

            <TextView
                style="@style/light_name"
                android:textSize="@dimen/subhead"
                android:id="@+id/fader_text"
                android:text="@string/fader_text"
                android:layout_marginLeft="@dimen/keyline_1" />

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/keyline_1"
                android:layout_marginRight="@dimen/keyline_1"
                android:id="@+id/seekBar"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/keyline_1_minus_8dp"
                android:orientation="horizontal">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/keyline_1_minus_8dp"
                    android:text="Edit"
                    android:textColor="@color/theme_primary"
                    style="?android:attr/borderlessButtonStyle"
                    android:id="@+id/edit_light" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Color"
                    android:textColor="@color/theme_primary"
                    style="?android:attr/borderlessButtonStyle"
                    android:id="@+id/color_light" />
            </LinearLayout>
        </LinearLayout>
</android.support.v7.widget.CardView>
</LinearLayout>